<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:orientation="vertical"
    >
  <include layout="@layout/view_action_bar"/>
  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="@dimen/dp_200"
      android:background="@color/color_title_bar_bg"
      android:gravity="center_vertical"
      android:paddingLeft="@dimen/dp_16"
      android:paddingRight="@dimen/dp_16"
      >
    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_width="@dimen/dp_100"
        android:layout_height="@dimen/dp_100"
        android:src="@mipmap/avatar"
        app:civ_border_color="@color/white"
        app:civ_border_width="@dimen/dp_2"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_16"
        android:text="189XXXXXXXX"
        android:textColor="@color/white"
        android:textSize="@dimen/sp_20"
        android:textStyle="bold"
        />
  </LinearLayout>


  <Button
      android:id="@+id/activity_user_center_install_list"
      android:layout_width="match_parent"
      android:layout_height="@dimen/dp_56"
      android:layout_marginLeft="@dimen/dp_16"
      android:layout_marginRight="@dimen/dp_16"
      android:layout_marginTop="@dimen/dp_48"
      android:background="@drawable/user_center_btn_bg"
      android:gravity="center"
      android:text="@string/str_install_list"
      android:textColor="@color/white"
      android:textSize="@dimen/dp_16"
      style="?android:attr/borderlessButtonStyle"
      />

  <Button
      android:id="@+id/activity_user_center_logout"
      android:layout_width="match_parent"
      android:layout_height="@dimen/dp_56"
      android:layout_marginLeft="@dimen/dp_16"
      android:layout_marginRight="@dimen/dp_16"
      android:layout_marginTop="@dimen/dp_8"
      android:background="@drawable/user_center_btn_bg"
      android:gravity="center"
      android:text="@string/str_log_out"
      android:textColor="@color/white"
      android:textSize="@dimen/dp_16"
      style="?android:attr/borderlessButtonStyle"
      />
</LinearLayout>